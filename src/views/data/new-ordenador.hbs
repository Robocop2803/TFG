<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Ordenador nuevo</h3>
        </div>
        <div class="card-body">
            <form action="/Ordenadores/new-Ordenador" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="os" class="form-control" placeholder="os" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
